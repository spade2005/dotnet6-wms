<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manage System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/mvc_andy.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">and System</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Backend" asp-controller="Home"
                                asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                系统设置
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="Backend" asp-controller="User" asp-action="Index">用户管理</a>
                                </li>
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="Backend" asp-controller="Role" asp-action="Index">角色管理</a>
                                </li>
                            </ul>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                WMS管理
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="Backend" asp-controller="GoodsCate" asp-action="Index">商品分类管理</a>
                                </li>
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="Backend" asp-controller="Goods" asp-action="Index">商品管理</a>
                                </li>
                                
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="Backend" asp-controller="OrderIn" asp-action="Index">入库管理</a>
                                </li>
                                
                                </li>
                                <li class="nav-item">
                                    <a class="dropdown-item" asp-area="Backend" asp-controller="OrderOut" asp-action="Index">出库管理</a>
                                </li>
                            </ul>
                        </li>
                        
                    </ul>

                    <div class="d-flex">
                        @{
                            var user = ViewData["UserInfo"] as mvc_andy.Models.com.UserModel;
                        }
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    @if (user != null)
                                    {
                                        if (user.NickName != "")
                                        {
                                            @user.NickName
                                        }
                                        else
                                        {
                                            @user.UserName
                                        }
                                    }
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                    <li><a class="nav-link text-dark" asp-area="Backend" asp-controller="Auth"
                                            asp-action="Logout">Logout</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - andySystem
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await RenderSectionAsync("MyScripts", required: false)
</body>

</html>
